<resources>

    <!-- region Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/material_white_primary</item>
        <item name="android:actionMenuTextColor">@color/medium_blue_40pc</item>
        <item name="android:actionMenuTextAppearance">@style/Text.Demo.Caption1.Secondary</item>

        <item name="colorPrimary">@color/material_grey_dark</item>
        <item name="colorPrimaryDark">@color/material_black_primary</item>
        <item name="colorAccent">@color/material_white_primary</item>

        <item name="PrimaryThemeColor">@color/medium_blue_40pc</item>
        <item name="PrimaryThemeColorDark">@color/medium_blue</item>
        <item name="PrimaryThemeColorLight">@color/material_white_primary</item>

        <item name="PrimaryTextColor">@color/medium_blue</item>
        <item name="SecondaryTextColor">@color/medium_blue_40pc</item>
        <item name="LightTextColor">@color/material_white_primary</item>
        <item name="ErrorTextColor">@color/error_color</item>
        <item name="HintTextColor">@color/hint_text_color</item>

        <item name="PrimarySelector">@drawable/default_selector_blue</item>
        <item name="SecondarySelector">@drawable/default_selector_grey</item>
        <item name="LightSelector">@drawable/default_selector_white</item>

        <item name="FilledButtonBackground">@drawable/button_rubine</item>
        <item name="FilledThemeButtonBackground">@drawable/button</item>
        <item name="OutlineButtonBackground">@drawable/button_outline</item>
        <item name="RoundedCornerOutlineButtonBackground">@drawable/button_rounded_corner_outline</item>
        <item name="BorderlessButtonBackground">@drawable/default_selector_blue</item>

        <item name="EditTextColor">@color/medium_blue</item>
        <item name="EditTextHintColor">@color/medium_blue_40pc</item>


        <!-- Common -->
        <item name="DividerColor">@color/medium_blue_5pc</item>
        <item name="ColoredDividerColor">@color/rubine</item>
        <item name="SpinnerTextColor">@color/black</item>
        <item name="IndeterminateProgressColor">@color/white_100pc</item>
        <item name="DisabledButtonTextColor">@color/white_25pc</item>
        <item name="DefaultButtonTextColor">@color/material_white_primary</item>
        <item name="NavigationIconColorDark">@color/medium_blue</item>
        <item name="ErrorSnackBarBackgroundColor">@color/error_color</item>>
        <item name="ErrorSnackBarBarTextColor">@color/white_100pc</item>

        <!-- SelectableImageButton -->
        <item name="SelectableImageButtonSelectedContentColor">@color/rubine</item>
        <item name="SelectableImageButtonContentColor">@color/medium_blue</item>

    </style>

    <!-- endregion -->

